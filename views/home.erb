
<h1>Life is too short for playing Sudoku !</h1>
<div class="flashspace">
  <%= styled_flash %>
</div>  
<form action="/" method="post">
  <div class="board">
    <table cellspacing="0">
      <tbody>
        <tr>
          <% @cells.each_with_index { |cell, i| if i % 9.0 == 0 && i != 0 %>
              </tr><tr>
            <% end %>
            <td class="cell">
              <input type='text' class=<%= cell.value == @solved_cells[i].value ? "correct" : "wrong" %> name="cells[]" maxlength="1" autocomplete="off" onClick="this.select();" pattern="[1-9]" title="Please input a number between 1-9" <%= "value='#{cell.to_s}'"%> <%= "readonly" if cell.value == @starting_cells[i].value && cell.value == @solved_cells[i].value %> >
            </td>
          <% } %>
        </tr>
      </tbody>
    </table>

    <div class="buttons">
      <button type="submit">Check</button>
      <button type="button"><a href="/new">New Game</a></button>
      <button type="button"><a href="/solution">Solution</a></button>
    </div>
  </div>
</form>




