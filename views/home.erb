<h1>Life is too short for playing Sudoku !</h1>
<%= styled_flash %>
<form action="/" method="post">
  <div class="board">
    <table cellspacing="0">
      <tbody>
        <tr>
          <% @cells.each_with_index { |cell, i| if i % 9.0 == 0 && i != 0 %>
          <% @solved_cells %>
              </tr><tr>
            <% end %>
            <td class="cell">
              <input type='text' name="cells[]" maxlength="1" pattern="[1-9]" title="Please input a number between 1-9" value=<%= cell.to_s%> <%= "readonly" if cell.value == @solved_cells[i].value %> >
            </td>
          <% } %>
        </tr>
      </tbody>
    </table>

    <div class="buttons">
      <button type="submit">Check</button>
      <button type="button"><a href="/new">New Game</a></button>
    </div>
  </div>
</form>




